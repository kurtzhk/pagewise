<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.pagewisegroup.pagewise">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.PageWise">
        <activity
            android:name=".profile.ProfileViewActivity"
            android:exported="false" />
        <activity
            android:name=".recordReading.FinishReadingActivity"
            android:exported="false" />
        <activity
            android:name=".recordReading.ReadingActivity"
            android:exported="false"
            android:label="@string/title_activity_reading"
            android:theme="@style/Theme.PageWise.NoActionBar" />
        <activity
            android:name=".StudentViewActivity"
            android:exported="false" />
        <activity android:name=".MainActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>