<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.PageWise" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>

        <item name="colorPrimary">#33363d</item>
        <item name="colorPrimaryVariant">#33363d</item>
        <item name="colorOnPrimary">#FFFFFF</item>

        <item name="colorSecondary">#33363d</item>
        <item name="colorSecondaryVariant">#33363d</item>
        <item name="colorOnSecondary">#FFFFFF</item>

        <item name="colorSurface">#000000</item>
        <item name="colorOnSurface">#FFFFFF</item>

        <item name="android:colorBackground">#16171a</item>
        <item name="colorOnBackground">#FFFFFF</item>

        <item name="colorError">#B00020</item>
        <item name="colorOnError">#FFFFFF</item>

        <item name="android:textColor">#FFFFFF</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="Theme.PageWiseButton" parent="Widget.AppCompat.Button.Colored">
        <item name="colorSecondaryVariant">#FFFFFF</item>
        <item name="android:textColor">#33363d</item>
    </style>

    <style name="Theme.PageWise.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.PageWise.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />
    <style name="Theme.PageWise.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>